<% layout('layouts/boilerplate') %>
    <h1>Campgrounds List</h1>
    <a href="/campgrounds/new">Create New Campground</a>
    <hr>

    <% for(let i of campgrounds){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= i.images[0].url %>" class="img-fluid" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= i.title %></h5>
                        <p class="card-text">Price: <%=i.price%></p>
                        <p class="card-text">Location: <%=i.location%></p>
                        <a href="/campgrounds/<%=i._id%>" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
